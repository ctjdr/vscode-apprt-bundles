{
    "name": "vscode-apprt-bundles",
    "displayName": "vscode-apprt-bundles",
    "description": "VS Code extension that supports working with a bundle manifest.json",
    "version": "0.3.0",
    "author": {
        "name": "ctjdr"
    },
    "publisher": "ctjdr",
    "repository": {
        "type": "git",
        "url": "https://github.com/ctjdr/vscode-apprt-bundles.git",
        "directory": ""
    },
    "engines": {
        "vscode": "^1.49.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "logo.png",
    "activationEvents": [
        "workspaceContains:**/manifest.json",
        "onCommand:apprtbundles.activate"
    ],
    "main": "./dist/extension",
    "contributes": {
        "jsonValidation": [
            {
                "fileMatch": [
                    "manifest.json",
                    "!/node_modules/**/manifest.json",
                    "!/node_modules/manifest.json"
                ],
                "url": "apprt://./manifest.schema.json"
            }
        ],
        "configuration": {
            "title": "apprt-bundles",
            "properties": {
                "apprtbundles.manifest.serviceNameCodeLens.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable code lens for service names in manifest.json files, by default."
                },
                "apprtbundles.manifest.documentationTooltips.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable documentation tooltips for manifest.json properties."
                },
                "apprtbundles.bundles.reveal.goal.type": {
                    "type": "string",
                    "enum": [
                        "folder",
                        "manifest"
                    ],
                    "enumDescriptions": [
                        "Reveals/highlights the bundle's folder in the Explorer",
                        "Reveals/highlights the bundle's manifest.json file in the Explorer"
                    ],
                    "default": "folder",
                    "description": "Select the element in the Explorer that is revealed when calling the 'Open bundle' command."
                },
                "apprtbundles.bundles.reveal.goal.expandFolder": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Enable/disable automatic bundle folder expansion when calling the 'Open bundle' command. Only relevent if `#apprtbundles.bundles.reveal.goal#` is set to `folder`"
                }
            }
        },
        "commands": [
            {
                "command": "apprtbundles.manifest.toggleDocumentationTooltips",
                "title": "apprt-bundles: Toggle manifest documentation"
            },
            {
                "command": "apprtbundles.manifest.toggleServiceNameCodeLens",
                "title": "apprt-bundles: Toggle service name code lens"
            },
            {
                "command": "apprtbundles.bundles.reveal",
                "title": "apprt-bundles: Open bundle"
            },
            {
                "command": "apprtbundles.activate",
                "title": "apprt-bundles: Activate extension"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "apprtbundles.manifest.toggleDocumentationTooltips",
                    "when": "vscode-apprt-bundles:showCommands"
                },
                {
                    "command": "apprtbundles.manifest.toggleServiceNameCodeLens",
                    "when": "vscode-apprt-bundles:showCommands"
                },
                {
                    "command": "apprtbundles.bundles.reveal",
                    "when": "vscode-apprt-bundles:showCommands"
                },
                {
                    "command": "apprtbundles.activate",
                    "when": "!vscode-apprt-bundles:showCommands"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "test-compile": "tsc -p ./",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "lint": "eslint src --ext ts",
        "watch": "npm run copy-json && tsc -watch -p ./",
        "watch-json": "copy-and-watch --watch src/schemas/**/*.json out/schemas/",
        "copy-json": "copyfiles -u 1 src/schemas/* src/test/suite/files/* out/",
        "pretest": "npm run copy-json && npm run test-compile && npm run lint && npm run webpack",
        "test": "node ./out/test/runTest",
        "testIt": "node ./out/test/runIntegrationTest",
        "testIt2": "mocha out/test/suite/index.js",
        "test-manifest-path": "npm run compile && mocha out/test/suite/manifestPathTest.js",
        "get-version": "echo $npm_package_version"
    },
    "dependencies": {
        "jsonc-parser": "^2.3.1",
        "jsonschema": "^1.4.0"
    },
    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.0.27",
        "@types/vscode": "^1.49.0",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "ajv": "^6.12.4",
        "chai": "^4.2.0",
        "copy-and-watch": "^0.1.5",
        "copyfiles": "^2.3.0",
        "eslint": "^7.6.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "ts-loader": "^8.0.11",
        "typescript": "^4.0.2",
        "vscode-test": "^1.4.0",
        "webpack": "^5.4.0",
        "webpack-cli": "^4.2.0",
        "@apidevtools/json-schema-ref-parser": "^9.0.6"
    }
}
