{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://www.conterra.de/schemas/layout.schema.json",
    "definitions": {
        "layout-widgets": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/layout-widget"
            },
            "description": "An array of widget definitions.\n\nThis mechanism provides a way to link widgets provided in custom bundles into an existing app without having to add new attach points to the layout template.\nSee https://demos.conterra.de/mapapps/resources/jsregistry/root/templates/latest/README.md for details."
        },
        "layout-widget" : {
            "type": "object",
            "required": [],
            "additionalProperties": false,
            "properties": {
                "widgetRole": {
                    "type": "string"
                },
                "window": {
                    "type": "object"
                },
                "windowevents": {
                    "type": "object"
                },
                "role": {
                    "type": "string"
                },
                "attachTo": {
                    "type": "string"
                },
                "template": {
                    "type": "string"
                },
                "cssClass": {
                    "type": "string"
                },
                "nomerge": {
                    "type": "boolean"
                },
                "priority": {
                    "type": "integer"
                },
                "sublayout": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "props": {
                    "type": "object"
                }
            },
            "description": "A widget. Each widget is an object as described above for the widget property of the TemplateModel component.\n\nSee https://demos.conterra.de/mapapps/resources/jsregistry/root/templates/latest/COMPONENTS.md for details.",
            "examples": [
            ]        
        },
        "layout-templates": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "CSS-Themes": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "CSS-Themes-Extension": {
            "type": "array",
            "items": {
                "type": "object"
            }
        }

    }
}